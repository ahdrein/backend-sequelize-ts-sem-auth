{
  "name": "backend",
  "version": "1.0.0",
  "description": "'API REST desenvolvida utilizando TypeScript'",
  "main": "./server/server.ts",
  "scripts": {
    "start": "cross-env PORT=5000 NODE_ENV=development ./node_modules/.bin/ts-node server/server.ts",
    "builded": "cross-env PORT=5000 NODE_ENV=production node dist/server/server.js",
    "production": "node dist/server/server.js",
    "test": "cross-env PORT=5000 NODE_ENV=test npm run lint && npm run test-unit && npm run test-integration",
    "test-integration": "cross-env PORT=5000 NODE_ENV=test mocha --opts dist/test/integration/mocha.opts dist/tests/integration/**/*.js",
    "test-unit": "cross-env PORT=5000 NODE_ENV=test mocha --opts mocha.opts ./dist/tests/unit/unit.test.js",
    "test-contract": "cross-env PORT=5000 NODE_ENV=test mocha --opts test/contract/mocha.opts test/contract/contracts/*.js",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint '**/*.js' --fix",
    "integration-coverage": "cross-env PORT=5000 NODE_ENV=test nyc --reporter=html npm run test-integration",
    "unit-coverage": "cross-env PORT=5000 NODE_ENV=test nyc --reporter=html npm run test-unit"
  },
  "keywords": [
    "API",
    "TypeScript",
    "Node",
    "Postgres"
  ],
  "engines": {
    "node": "~6.11.1",
    "npm": "~3.10.9"
  },
  "author": "Andrews H. Drein",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "http": "0.0.0",
    "http-status": "^1.0.1",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.4",
    "morgan": "^1.8.1",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "pg": "^6.4.2",
    "sequelize": "^3.30.4",
    "sequelize-cli": "^2.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/bluebird": "^3.5.5",
    "@types/body-parser": "^1.16.3",
    "@types/chai": "^3.5.1",
    "@types/express": "^4.0.35",
    "@types/http-status": "^0.2.29",
    "@types/jwt-simple": "^0.5.33",
    "@types/lodash": "^4.14.76",
    "@types/mocha": "^2.2.41",
    "@types/morgan": "^1.7.32",
    "@types/node": "^6.0.88",
    "@types/passport": "^0.3.3",
    "@types/passport-jwt": "^2.0.19",
    "@types/sequelize": "^4.0.51",
    "@types/supertest": "^2.0.0",
    "chai": "^3.5.0",
    "cross-env": "^5.0.5",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-typescript": "^3.2.1",
    "http": "0.0.0",
    "http-server": "^0.9.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "mysql": "^2.14.1",
    "nyc": "^10.3.2",
    "supertest": "^3.0.0",
    "testdouble": "^2.1.2",
    "ts-node": "^3.3.0",
    "typescript": "^2.4.2"
  }
}
